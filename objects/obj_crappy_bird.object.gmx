    if (global.game_state == 0){
        global.game_state = 1;
    }
    
    //gravity should be added when the player has clicked
    //and the game has begun, otherwise
    //crappy bird just hovers
   // gravity = .01;
    v_acc = 220;
    
    //if clicked image angle 
    image_angle = 45;
    audio_play_sound(sound_jump, 0,0);
} else if ((mouse_check_button_released(mb_left) || keyboard_check_released(vk_space)) &amp;&amp; global.game_state == 2) {
     game_restart();
}

//we want to subtract from
//the y coordinate when the
//keyboard is pressed because
//that moves it up 
//this should be done
//every step, the only thing that should change is the acceleration
//on click or spacebar.   
if (global.game_state != 0){    
    y -= v_acc * 1 / room_speed;  
    v_acc -= 1 / room_speed * 440;
}

//collision between crappy bird
//and the pipes
if (instance_exists(obj_pipe_top) &amp;&amp; instance_exists(obj_pipe_bottom)){
    if ((place_meeting(x,y,obj_pipe_top) || place_meeting(x,y,obj_pipe_bottom)) &amp;&amp; collided_once == false){
        v_acc = 0;
        collided_once = true;
        if (soundable){
            audio_play_sound(sound_hit,0,0);
            soundable = false;
        }
        global.game_state =2;
        }
}

//collision with ground
if (y &gt; view_hview[0] + 50){
    v_acc = 0;
    global.game_state = 2;
    if (soundable){
            audio_play_sound(sound_hit,0,0);
            soundable = false;
        }
}
if (global.game_state == 1){
    if (image_angle &gt; -90){
       image_angle--;
    }
}
